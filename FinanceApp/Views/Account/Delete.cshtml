@model FinanceApp.Models.dbAccount

@{
    ViewData["Title"] = "Delete Account";
}

<div class="row justify-content-center pt-4">
    <div class="col-md-8 col-lg-6">

        <div class="card shadow-sm border-0">

            <!-- Card Header: Warning Style -->
            <div class="card-header bg-white border-bottom-0 py-3">
                <div class="d-flex align-items-center text-danger">
                    <i class="fas fa-exclamation-triangle fa-lg mr-2"></i>
                    <h5 class="m-0 font-weight-bold">Delete Confirmation</h5>
                </div>
            </div>

            <!-- Card Body: Content -->
            <div class="card-body pt-0">
                <p class="text-muted mb-4">
                    Are you sure you want to delete this account?
                    <br>
                    <small>This action cannot be undone.</small>
                </p>

                <!-- Data Grid -->
                <div class="bg-light p-3 rounded mb-3">

                    <!-- Account Number -->
                    <div class="row mb-2">
                        <div class="col-sm-4">
                            <small class="text-uppercase font-weight-bold text-secondary">Account No</small>
                        </div>
                        <div class="col-sm-8 font-weight-bold text-primary text-monospace">
                            @Html.DisplayFor(model => model.account_no)
                        </div>
                    </div>

                    <!-- Account Name -->
                    <div class="row mb-2">
                        <div class="col-sm-4">
                            <small class="text-uppercase font-weight-bold text-secondary">Account Name</small>
                        </div>
                        <div class="col-sm-8 text-dark font-weight-bold">
                            <!-- Corrected to display account_name instead of akundk -->
                            @Html.DisplayFor(model => model.account_name)
                        </div>
                    </div>

                    <!-- Hierarchy -->
                    <div class="row">
                        <div class="col-sm-4">
                            <small class="text-uppercase font-weight-bold text-secondary">Hierarchy</small>
                        </div>
                        <div class="col-sm-8 text-dark">
                            @Html.DisplayFor(model => model.hierarchy)
                        </div>
                    </div>

                </div>
            </div>

            <!-- Card Footer: Actions -->
            <div class="card-footer bg-white py-3">
                <form asp-action="Delete" class="d-flex justify-content-between align-items-center">
                    <input type="hidden" asp-for="id" />

                    <!-- Cancel / Back Button -->
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left mr-1"></i> Cancel
                    </a>

                    <!-- Confirm Delete Button -->
                    <button type="submit" class="btn btn-danger px-4 shadow-sm">
                        <i class="fas fa-trash-alt mr-1"></i> Confirm Delete
                    </button>
                </form>
            </div>

        </div>

    </div>
</div>