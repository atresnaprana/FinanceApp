@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "List of Roles";
}

<!-- Ensure FontAwesome is loaded -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

<div class="row">
    <div class="col-12">

        <!-- Main Card Container -->
        <div class="card shadow-sm border-0">

            <!-- Card Header -->
            <div class="card-header bg-white py-3 d-flex flex-row align-items-center justify-content-between">
                <h4 class="m-0 font-weight-bold text-primary">List of Roles</h4>

                <a asp-action="Create" class="btn btn-primary btn-sm shadow-sm">
                    <i class="fas fa-plus fa-sm text-white-50 mr-2"></i> Create Role
                </a>
            </div>

            <!-- Card Body -->
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover table-bordered" id="IndexTbl" width="100%" cellspacing="0">
                        <thead class="thead-light">
                            <tr>
                                <th style="width: 30%">Id</th>
                                <th>Name</th>
                                <th style="width: 25%" class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var role in Model)
                            {
                                <tr>
                                    <!-- Use monospace font for IDs to make them look neater -->
                                    <td class="align-middle text-monospace small text-muted">
                                        @role.Id
                                    </td>
                                    <td class="align-middle font-weight-bold text-dark">
                                        @role.Name
                                    </td>
                                    <td class="text-center align-middle">
                                        <div class="d-flex justify-content-center align-items-center">

                                            <!-- 1. Primary CRUD Actions (Icons) -->
                                            <div class="btn-group mr-2" role="group">
                                                <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-outline-primary btn-sm" title="Edit Role Name">
                                                    <i class="fas fa-pen"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@role.Id" class="btn btn-outline-danger btn-sm" title="Delete Role">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>

                                            <!-- 2. Access Management (Dropdown) -->
                                            <div class="dropdown">
                                                <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                                                    <i class="fas fa-cog mr-1"></i> Access
                                                </button>
                                                <div class="dropdown-menu shadow">
                                                    <h6 class="dropdown-header">Manage Permissions</h6>

                                                    <a class="dropdown-item" asp-action="EditUsersInRole" asp-route-id="@role.Id">
                                                        <i class="fas fa-users text-info mr-2" style="width:20px"></i> Users in Role
                                                    </a>

                                                    <a class="dropdown-item" asp-action="EditRolesTab" asp-route-id="@role.Id">
                                                        <i class="fas fa-folder text-warning mr-2" style="width:20px"></i> Tab Access
                                                    </a>

                                                    <a class="dropdown-item" asp-action="EditRolesMenu" asp-route-id="@role.Id">
                                                        <i class="fas fa-bars text-success mr-2" style="width:20px"></i> Menu Access
                                                    </a>
                                                </div>
                                            </div>

                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            // I kept your specific configuration intact
            $('#IndexTbl').DataTable({
                "sPaginationType": "full_numbers",
                "bProcessing": true,
                "aLengthMenu": [[10, 50, 100, 200, -1], ["10", "50", "100", "200", "All"]],
                "stateSave": true,
                "language": {
                    "search": "",
                    "searchPlaceholder": "Search roles..."
                },
                // Removed 'bJQueryUI': true because it conflicts with Bootstrap 4 styling
                // "bJQueryUI": true,

                "oSelectorOpts": { filter: 'applied' },
                dom: "<'row mb-3'<'col-sm-6'B><'col-sm-6'f>>" + // Moved Buttons and Search to top row
                     "<'row'<'col-sm-12'tr>>" +
                     "<'row mt-3'<'col-sm-5'i><'col-sm-7'p>>", // Added margin top for footer
                buttons: [
                    {
                        extend: 'excel',
                        text: '<i class="fas fa-file-excel mr-1"></i> Export to Excel',
                        className: 'btn btn-success btn-sm', // Made the excel button green and small
                        title: 'RoleList',
                        exportOptions: {
                            columns: ':visible'
                        }
                    }
                ],
                "columnDefs": [{
                    "className": "dt-center",
                    "targets": [0, 1]
                }],
            });
        });
    </script>
}