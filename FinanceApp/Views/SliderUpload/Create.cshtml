@model BaseLineProject.Models.dbSliderImg

@{
    ViewData["Title"] = "Input Data Baru";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">

        <form asp-action="Create" id="formcreate" enctype="multipart/form-data">

            <!-- Modern Card Wrapper -->
            <div class="card shadow-sm border-0">

                <!-- Card Header -->
                <div class="card-header bg-white py-3">
                    <div class="d-flex align-items-center justify-content-between">
                        <h5 class="m-0 font-weight-bold text-primary">
                            <i class="fas fa-cloud-upload-alt mr-2"></i>Upload Slider Image
                        </h5>
                        <small class="text-muted">New Banner</small>
                    </div>
                </div>

                <!-- Card Body -->
                <div class="card-body">

                    <!-- Image Description -->
                    <div class="form-group mb-4">
                        <label class="font-weight-bold text-dark small text-uppercase">Image Description</label>
                        <input asp-for="IMG_DESC" class="form-control" placeholder="Enter a description for this banner" />
                        <span asp-validation-for="IMG_DESC" class="text-danger small"></span>
                    </div>

                    <!-- File Upload Section -->
                    <div class="form-group mb-3">
                        <label class="font-weight-bold text-dark small text-uppercase">Select Image File</label>

                        <div class="p-4 border rounded bg-light text-center">

                            <!-- File Input -->
                            <input type="file" asp-for="fileImg" class="form-control-file mb-2" style="margin: 0 auto; display: block; max-width: 100%;" />
                            <span asp-validation-for="fileImg" class="text-danger small d-block"></span>

                            <!-- Help Text -->
                            <div class="mt-3 text-muted small">
                                <i class="fas fa-info-circle mr-1"></i>
                                <strong>Requirements:</strong> Max 4MB. Formats: JPG, JPEG, PNG.
                            </div>
                        </div>
                    </div>

                </div>

                <!-- Card Footer: Actions -->
                <div class="card-footer bg-white d-flex justify-content-between py-3">
                    <!-- Back Button -->
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left mr-1"></i> Kembali ke List
                    </a>

                    <!-- Save Button -->
                    <button type="button" onclick="alertfirst()" class="btn btn-primary px-4 shadow-sm">
                        <i class="fas fa-save mr-1"></i> Simpan Data Baru
                    </button>
                </div>

            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function allowOnlyNumber(evt) {
            var charCode = (evt.which) ? evt.which : event.keyCode
            if (charCode > 31 && (charCode < 48 || charCode > 57))
                return false;
            return true;
        }

        function alertfirst() {
            if (confirm("Are you sure you want to save this new image?")) {
                $('#formcreate').submit();
            } else {
                return false;
            }
        }

        // File Validation Logic
        $('#fileImg').on('change', function () {
            if (this.files && this.files[0]) {
                const size = (this.files[0].size / 1024 / 1024).toFixed(2);

                var errmsg = "";

                // Check Size (4MB)
                if (size > 4) {
                    errmsg += "File size maximum is 4 MB \r\n";
                }

                // Check Extension
                var fileExtension = ['jpeg', 'jpg', 'png'];
                if ($.inArray($(this).val().split('.').pop().toLowerCase(), fileExtension) == -1) {
                    errmsg += "Only formats are allowed : " + fileExtension.join(', ');
                }

                // If error, clear input and alert
                if (errmsg != "") {
                    // FIX: Changed #filePhoto to #fileImg to correctly clear the input
                    $('#fileImg').val('');
                    alert(errmsg);
                }
            }
        });
    </script>
}