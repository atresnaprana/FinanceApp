@model IEnumerable<BaseLineProject.Models.dbSliderImg>
@{
    ViewData["Title"] = "Slide Image List";
}

<!-- Ensure FontAwesome is loaded -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

<div class="row">
    <div class="col-12">

        <!-- Main Card Container -->
        <div class="card shadow-sm border-0">

            <!-- Card Header: Title Left, Create Button Right -->
            <div class="card-header bg-white py-3 d-flex flex-row align-items-center justify-content-between">
                <h5 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-images mr-2"></i>Slider Image List
                </h5>

                <a asp-action="Create" class="btn btn-primary btn-sm shadow-sm">
                    <i class="fas fa-plus fa-sm text-white-50 mr-2"></i> Input Data Baru
                </a>
            </div>

            <!-- Card Body: The Table -->
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover table-bordered" id="IndexTbl" width="100%" cellspacing="0">
                        <thead class="thead-light">
                            <tr>
                                <th style="width: 5%">No.</th>
                                <th>Image Description</th>
                                <th>File Name</th>
                                <th style="width: 15%" class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var i = 1;
                            }
                            @foreach (var dt in Model)
                            {
                                <tr>
                                    <td class="align-middle text-center">@i</td>

                                    <!-- Description -->
                                    <td class="align-middle font-weight-bold text-dark">
                                        @Html.DisplayFor(modelItem => dt.IMG_DESC)
                                    </td>

                                    <!-- File Name (Monospace font for technical look) -->
                                    <td class="align-middle text-muted small text-monospace">
                                        <i class="far fa-file-image mr-1"></i>
                                        @Html.DisplayFor(modelItem => dt.FILE_NAME)
                                    </td>

                                    <!-- Actions -->
                                    <td class="text-center align-middle">
                                        <div class="btn-group" role="group">
                                            <!-- Edit Button -->
                                            <a asp-action="Edit" asp-route-id="@dt.ID" class="btn btn-outline-primary btn-sm" title="Edit Image Info">
                                                <i class="fas fa-pen"></i>
                                            </a>

                                            <!-- Delete Button -->
                                            <a asp-action="Delete" asp-route-id="@dt.ID" class="btn btn-outline-danger btn-sm ml-1" title="Delete Image">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('#IndexTbl').DataTable({
                stateSave: true,
                "language": {
                    "emptyTable": "No images found",
                    "search": "Search:",
                },
                // Use Bootstrap grid layout for DataTables
                "dom": '<"row"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>' +
                       '<"row"<"col-sm-12"tr>>' +
                       '<"row"<"col-sm-12 col-md-5"i><"col-sm-12 col-md-7"p>>'
            });
        });
    </script>
}