@model BaseLineProject.Models.dbSliderImg

@{
    ViewData["Title"] = "Delete Image";
}

<div class="row justify-content-center pt-4">
    <div class="col-md-8 col-lg-6">

        <div class="card shadow-sm border-0">

            <!-- Card Header: Warning Style -->
            <div class="card-header bg-white border-bottom-0 py-3">
                <div class="d-flex align-items-center text-danger">
                    <i class="fas fa-exclamation-triangle fa-lg mr-2"></i>
                    <h5 class="m-0 font-weight-bold">Delete Confirmation</h5>
                </div>
            </div>

            <!-- Card Body: Content -->
            <div class="card-body pt-0">
                <p class="text-muted mb-4">
                    Are you sure you want to delete this slider image?
                    <br>
                    <small>This banner will be removed from the home page immediately.</small>
                </p>

                <!-- Data Grid -->
                <div class="bg-light p-3 rounded mb-3">

                    <!-- Image Preview (If available in model) -->
                    @if (!string.IsNullOrEmpty(Model.imgUrl))
                    {
                        <div class="row mb-3">
                            <div class="col-12 text-center">
                                <img src="@Model.imgUrl" class="img-fluid rounded shadow-sm" style="max-height: 150px;" alt="Banner Preview" />
                            </div>
                        </div>
                    }

                    <!-- Description -->
                    <div class="row mb-2">
                        <div class="col-sm-4">
                            <small class="text-uppercase font-weight-bold text-secondary">Description</small>
                        </div>
                        <div class="col-sm-8 font-weight-bold text-dark">
                            @Html.DisplayFor(model => model.IMG_DESC)
                        </div>
                    </div>

                    <!-- ID -->
                    <div class="row">
                        <div class="col-sm-4">
                            <small class="text-uppercase font-weight-bold text-secondary">Database ID</small>
                        </div>
                        <div class="col-sm-8 text-muted small text-monospace">
                            @Html.DisplayFor(model => model.ID)
                        </div>
                    </div>

                </div>
            </div>

            <!-- Card Footer: Actions -->
            <div class="card-footer bg-white py-3">
                <form asp-action="Delete" class="d-flex justify-content-between align-items-center">
                    <input type="hidden" asp-for="ID" />

                    <!-- Cancel / Back Button -->
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left mr-1"></i> Cancel
                    </a>

                    <!-- Confirm Delete Button -->
                    <button type="submit" class="btn btn-danger px-4 shadow-sm">
                        <i class="fas fa-trash-alt mr-1"></i> Confirm Delete
                    </button>
                </form>
            </div>

        </div>

    </div>
</div>