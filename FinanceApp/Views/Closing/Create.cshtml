@model FinanceApp.Models.dbClosing

@{
    ViewData["Title"] = "Input Closing Baru";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">

        <form asp-action="Create" id="formcreate" enctype="multipart/form-data">

            <!-- Modern Card Wrapper -->
            <div class="card shadow-sm border-0">

                <!-- Card Header -->
                <div class="card-header bg-white py-3">
                    <div class="d-flex align-items-center justify-content-between">
                        <h5 class="m-0 font-weight-bold text-primary">
                            <i class="fas fa-calendar-plus mr-2"></i>New Closing Period
                        </h5>
                        <small class="text-muted">Period Entry</small>
                    </div>
                </div>

                <!-- Card Body -->
                <div class="card-body">

                    <!-- Description -->
                    <div class="form-group mb-3">
                        <label class="font-weight-bold text-dark small text-uppercase">Description</label>
                        <input asp-for="description" class="form-control" placeholder="e.g. Closing Januari 2025" />
                        <span asp-validation-for="description" class="text-danger small"></span>
                    </div>

                    <!-- Row: Period & Year -->
                    <div class="form-row">
                        <div class="form-group col-md-6 mb-3">
                            <label class="font-weight-bold text-dark small text-uppercase">Periode (Month)</label>
                            <input asp-for="periode" class="form-control" placeholder="1-12" type="number" />
                            <span asp-validation-for="periode" class="text-danger small"></span>
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <label class="font-weight-bold text-dark small text-uppercase">Year</label>
                            <input asp-for="year" class="form-control" placeholder="YYYY" type="number" />
                            <span asp-validation-for="year" class="text-danger small"></span>
                        </div>
                    </div>

                    <hr class="my-2" />

                    <!-- Row: Date Range -->
                    <div class="form-row">
                        <div class="form-group col-md-6 mb-3">
                            <label class="font-weight-bold text-dark small text-uppercase">Date From</label>
                            <input type="date" asp-for="datefrom" class="form-control" />
                            <span asp-validation-for="datefrom" class="text-danger small"></span>
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <label class="font-weight-bold text-dark small text-uppercase">Date To</label>
                            <input type="date" asp-for="dateto" class="form-control" />
                            <span asp-validation-for="dateto" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- Is Closed Switch -->
                    <div class="form-group mt-3">
                        <div class="custom-control custom-switch">
                            <input type="checkbox" class="custom-control-input" asp-for="isclosebool">
                            <label class="custom-control-label font-weight-bold text-dark" asp-for="isclosebool">
                                Close this period immediately?
                            </label>
                        </div>
                        <span asp-validation-for="isclosebool" class="text-danger small"></span>
                        <small class="form-text text-muted">If checked, no further transactions can be made in this period.</small>
                    </div>

                </div>

                <!-- Card Footer: Actions -->
                <div class="card-footer bg-white d-flex justify-content-between py-3">
                    <!-- Back Button -->
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left mr-1"></i> Kembali ke List
                    </a>

                    <!-- Save Button -->
                    <button type="button" onclick="alertfirst()" class="btn btn-primary px-4 shadow-sm">
                        <i class="fas fa-save mr-1"></i> Simpan Data Baru
                    </button>
                </div>

            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function allowOnlyNumber(evt) {
            var charCode = (evt.which) ? evt.which : event.keyCode
            if (charCode > 31 && (charCode < 48 || charCode > 57))
                return false;
            return true;
        }

        function alertfirst() {
            if (confirm("Are you sure you want to save this closing period?")) {
                $('#formcreate').submit();
            } else {
                return false;
            }
        }
    </script>
}