@model IEnumerable<FinanceApp.Models.dbClosing>
@{
    ViewData["Title"] = "Closing Info";
}

<style>
    #myPopup {
        display: none;
        position: absolute;
        top: 50px;
        right: 50%;
        background-color: blue;
        height: 100px;
        width: 100px;
    }

    #myExit {
        position: absolute;
        right: 0px;
        text-align: right;
        color: white;
        background-color: red;
    }

    .btn-primary2 {
        color: #ffffff;
        background-color: #000000;
        border-color: #000000 !important
    }

        .btn-primary2:hover {
            color: #fff;
            background-color: #be0000;
            border-color: #be0000 !important
        }
</style>
<p>
</p>
<div class="container" id="bootstrap-overrides">
    <div class="row">
        <div class="col-sm align-self-end">
            <a asp-action="Create" class="btn btn-dark">Input Data Baru</a>
        </div>

    </div>
</div>
<br />
<table class="table table-striped" id="IndexTbl">
    <thead>
        <tr>
            <th>Num.</th>
            <th>
                 Desc
            </th>
            <th>
                Periode
            </th>
            <th>
                Year
            </th>
            <th>
                date from
            </th>
            <th>
                date To
            </th>
            <th>
                isclosed

            </th>
            <th>
                update date
            </th>
            <th>
                update user
            </th>
            <th>
                entry date
            </th>
            <th>
                entry user
            </th>
            <th>
                <label>Actions</label>
            </th>
        </tr>
    </thead>
    <tbody id="tbodyid">
        @{
            var i = 1;
        }
        @foreach (var dt in Model)
        {
            <tr>
                <td>
                    @i
                </td>
                <td>
                    @Html.DisplayFor(modelItem => dt.description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => dt.periode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => dt.year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => dt.datefrom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => dt.dateto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => dt.isclosed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => dt.update_date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => dt.update_user)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => dt.entry_date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => dt.entry_user)
                </td>
                <td>
                    @if(dt.isclosed != "Y")
                    {
                        <div>
                            <a asp-action="Edit" asp-route-id="@dt.id" class="btn btn-sm btn-dark">Edit</a>
                            &nbsp;
                            <a asp-action="Delete" asp-route-id="@dt.id" class="btn btn-sm btn-dark">Delete</a>
                        </div>
                    }
            
                </td>
            </tr>
            i++;
        }
    </tbody>
</table>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('#IndexTbl').DataTable({
                stateSave: true,
            });
        });
    </script>
}
