@model IEnumerable<BaseLineProject.Models.dbCustomer>
@{
    ViewData["Title"] = "Form Data Customer";
    var isAdmin = User.IsInRole("Admin").ToString();
}

<!-- Ensure FontAwesome is loaded -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

<div class="row">
    <div class="col-12">

        <!-- Main Card Container -->
        <div class="card shadow-sm border-0">

            <!-- Card Header -->
            <div class="card-header bg-white py-3">
                <div class="d-flex align-items-center justify-content-between">
                    <h5 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-users-cog mr-2"></i>Customer Activation List
                    </h5>
                    <!-- Optional: You could add an Export button here later if needed -->
                </div>
            </div>

            <!-- Card Body: The Table -->
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover table-bordered" id="IndexTbl" width="100%" cellspacing="0">
                        <thead class="thead-light">
                            <tr>
                                <th style="width: 5%">No.</th>
                                <th>Reg. Date</th>
                                <th>Name / Email</th>
                                <th>Username</th>
                                <th>Company</th>
                                <th>Plan</th>
                                <th style="width: 15%" class="text-center">Status Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var i = 1;
                            }
                            @foreach (var dt in Model)
                            {
                                <tr>
                                    <td class="align-middle text-center">@i</td>

                                    <td class="align-middle">
                                        @if (dt.REG_DATE != null)
                                        {
                                            <span class="text-muted small">
                                                <i class="far fa-calendar-alt mr-1"></i>
                                                @dt.REG_DATE.Date.ToString("dd/MM/yyyy")
                                            </span>
                                        }
                                    </td>

                                    <td class="align-middle font-weight-bold text-dark">
                                        @Html.DisplayFor(modelItem => dt.Email)
                                    </td>

                                    <td class="align-middle">
                                        @Html.DisplayFor(modelItem => dt.CUST_NAME)
                                    </td>

                                    <td class="align-middle">
                                        @Html.DisplayFor(modelItem => dt.COMPANY)
                                    </td>

                                    <td class="align-middle">
                                        <!-- Add a badge to make the Plan stand out -->
                                        <span class="badge badge-info px-2 py-1">
                                            @Html.DisplayFor(modelItem => dt.VA1NOTE)
                                        </span>
                                    </td>

                                    <td class="text-center align-middle">
                                        @if (User.IsInRole("AccountAdmin"))
                                        {
                                            if (dt.FLAG_AKTIF == "1")
                                            {
                                                <!-- Deactivate Button (Red) -->
                                                <a asp-action="Delete" asp-route-id="@dt.id" class="btn btn-danger btn-sm shadow-sm" title="Deactivate User">
                                                    <i class="fas fa-ban mr-1"></i> Deactivate
                                                </a>
                                            }
                                            else
                                            {
                                                <!-- Activate Button (Green) -->
                                                <a asp-action="ActivateAccAdmin" asp-route-id="@dt.id" class="btn btn-success btn-sm shadow-sm" title="Activate User">
                                                    <i class="fas fa-check-circle mr-1"></i> Activate
                                                </a>
                                            }
                                        }
                                    </td>
                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('#IndexTbl').DataTable({
                "language": {
                    "emptyTable": "No customers found",
                    "search": "Search:",
                },
                // Use Bootstrap grid layout for DataTables
                "dom": '<"row"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>' +
                       '<"row"<"col-sm-12"tr>>' +
                       '<"row"<"col-sm-12 col-md-5"i><"col-sm-12 col-md-7"p>>'
            });
        });
    </script>
}