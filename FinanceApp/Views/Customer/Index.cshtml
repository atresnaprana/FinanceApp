@model IEnumerable<BaseLineProject.Models.dbCustomer>
@{
    ViewData["Title"] = "Form Data Customer";

    var isAdmin = User.IsInRole("Admin").ToString();
    var isallowed = Convert.ToBoolean(ViewData["isallowed"]);
}

<!-- Ensure FontAwesome is loaded -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

<div class="row">
    <div class="col-12">

        <!-- Main Card Container -->
        <div class="card shadow-sm border-0">

            <!-- Card Header: Title Left, Create Button Right (if allowed) -->
            <div class="card-header bg-white py-3 d-flex flex-row align-items-center justify-content-between">
                <h5 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-address-book mr-2"></i>Customer List
                </h5>

                @if (isallowed)
                {
                    <a asp-action="Create" class="btn btn-primary btn-sm shadow-sm">
                        <i class="fas fa-plus fa-sm text-white-50 mr-2"></i> Input Data Baru
                    </a>
                }
            </div>

            <!-- Card Body: The Table -->
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover table-bordered" id="IndexTbl" width="100%" cellspacing="0">
                        <thead class="thead-light">
                            <tr>
                                <th style="width: 5%">No.</th>
                                <th>Reg. Date</th>
                                <th>Name (Email)</th>
                                <th>Username</th>
                                <th>Company</th>
                                <th style="width: 15%" class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var i = 1;
                            }
                            @foreach (var dt in Model)
                            {
                                <tr>
                                    <td class="align-middle text-center">@i</td>

                                    <td class="align-middle">
                                        @if (dt.REG_DATE != null)
                                        {
                                            <span class="text-muted small">
                                                <i class="far fa-calendar-alt mr-1"></i>
                                                @dt.REG_DATE.Date.ToString("dd/MM/yyyy")
                                            </span>
                                        }
                                    </td>

                                    <!-- Mapped based on your original code: Header "Name" -> Model "Email" -->
                                    <td class="align-middle font-weight-bold text-dark">
                                        @Html.DisplayFor(modelItem => dt.Email)
                                    </td>

                                    <!-- Mapped based on your original code: Header "Username" -> Model "CUST_NAME" -->
                                    <td class="align-middle">
                                        @Html.DisplayFor(modelItem => dt.CUST_NAME)
                                    </td>

                                    <td class="align-middle">
                                        <i class="far fa-building text-muted mr-1"></i>
                                        @Html.DisplayFor(modelItem => dt.COMPANY)
                                    </td>

                                    <td class="text-center align-middle">
                                        @if (User.IsInRole("AccountAdmin"))
                                        {
                                            <div class="btn-group" role="group">
                                                <!-- Edit Button -->
                                                <a asp-action="Edit" asp-route-id="@dt.id" class="btn btn-outline-primary btn-sm" title="Edit Customer">
                                                    <i class="fas fa-pen"></i>
                                                </a>

                                                <!-- Toggle Status Button -->
                                                @if (dt.FLAG_AKTIF == "1")
                                                {
                                                    <a asp-action="Delete" asp-route-id="@dt.id" class="btn btn-outline-danger btn-sm ml-1" title="Deactivate">
                                                        <i class="fas fa-ban"></i>
                                                    </a>
                                                }
                                                else
                                                {
                                                    <a asp-action="ActivateAcc" asp-route-id="@dt.id" class="btn btn-outline-success btn-sm ml-1" title="Activate">
                                                        <i class="fas fa-check"></i>
                                                    </a>
                                                }
                                            </div>
                                        }
                                    </td>
                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('#IndexTbl').DataTable({
                "language": {
                    "emptyTable": "No customers found",
                    "search": "Search:",
                },
                // Use Bootstrap grid layout for DataTables
                "dom": '<"row"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>' +
                       '<"row"<"col-sm-12"tr>>' +
                       '<"row"<"col-sm-12 col-md-5"i><"col-sm-12 col-md-7"p>>'
            });
        });
    </script>
}