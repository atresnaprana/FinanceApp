@model FinanceApp.Models.dbTaxConfig

@{
    ViewData["Title"] = "Delete Tax Setting";
}

<div class="row justify-content-center pt-4">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white border-bottom-0 py-3">
                <div class="d-flex align-items-center text-danger">
                    <i class="fas fa-exclamation-triangle fa-lg mr-2"></i>
                    <h5 class="m-0 font-weight-bold">Delete Confirmation</h5>
                </div>
            </div>
            <div class="card-body pt-0">
                <p class="text-muted mb-4">Are you sure you want to delete this tax setting?</p>
                <div class="bg-light p-3 rounded mb-3">
                    <!-- Tax Type -->
                    <div class="row mb-2">
                        <div class="col-sm-4"><small class="text-uppercase font-weight-bold text-secondary">Tax Type</small></div>
                        <div class="col-sm-8 text-dark">@Model.taxtype</div>
                    </div>
                    <!-- Tax Mode -->
                    <div class="row mb-2">
                        <div class="col-sm-4"><small class="text-uppercase font-weight-bold text-secondary">Tax Mode</small></div>
                        <div class="col-sm-8 text-dark">@Model.taxmode</div>
                    </div>
                    <!-- Conditional Limit Display -->
                    @if (Model.taxmode == "fixed")
                    {
                        <div class="row mb-2">
                            <div class="col-sm-4"><small class="text-uppercase font-weight-bold text-secondary">Limit</small></div>
                            <div class="col-sm-8 text-dark text-monospace">@Model.taxlimit.ToString("N0")</div>
                        </div>
                    }
                    else if (Model.taxmode == "range")
                    {
                        <div class="row mb-2">
                            <div class="col-sm-4"><small class="text-uppercase font-weight-bold text-secondary">Range</small></div>
                            <div class="col-sm-8 text-dark text-monospace">@Model.taxlimitmin.ToString("N0") - @Model.taxlimitmax.ToString("N0")</div>
                        </div>
                    }
                    <!-- Percentage -->
                    <div class="row">
                        <div class="col-sm-4"><small class="text-uppercase font-weight-bold text-secondary">Percentage</small></div>
                        <div class="col-sm-8 text-dark font-weight-bold">@Model.taxpercentage.ToString("F2") %</div>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-white py-3">
                <form asp-action="Delete" class="d-flex justify-content-between align-items-center">
                    <input type="hidden" asp-for="id" />
                    <a asp-action="Index" class="btn btn-outline-secondary"><i class="fas fa-arrow-left mr-1"></i> Cancel</a>
                    <button type="submit" class="btn btn-danger px-4 shadow-sm"><i class="fas fa-trash-alt mr-1"></i> Confirm Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>