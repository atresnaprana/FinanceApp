@model BaseLineProject.Models.SystemMenuModel

@{
    ViewData["Title"] = "Input Data Baru";
}

<!-- Layout Container: Centers the form and limits width -->
<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">

        <form asp-action="Create" id="formcreate" enctype="multipart/form-data">

            <!-- Modern Card Wrapper -->
            <div class="card shadow-sm border-0">

                <!-- Card Header -->
                <div class="card-header bg-white py-3">
                    <div class="d-flex align-items-center justify-content-between">
                        <h5 class="m-0 font-weight-bold text-primary">
                            <i class="fas fa-plus-circle mr-2"></i>Input Data Baru
                        </h5>
                        <small class="text-muted">Form Entry</small>
                    </div>
                </div>

                <!-- Card Body: Input Fields -->
                <div class="card-body">

                    <!-- Parent Tab Dropdown -->
                    <div class="form-group mb-3">
                        <label class="font-weight-bold text-dark small text-uppercase">Parent Tab</label>
                        @Html.DropDownListFor(m => m.TAB_ID, new SelectList(Model.ddTab, "ID", "TAB_DESC"), new { @class = "form-control" })
                        <span asp-validation-for="TAB_ID" class="text-danger small"></span>
                    </div>

                    <!-- Menu Description -->
                    <div class="form-group mb-3">
                        <label class="font-weight-bold text-dark small text-uppercase">Menu Description</label>
                        <input asp-for="MENU_DESC" class="form-control" placeholder="Enter menu description" />
                        <span asp-validation-for="MENU_DESC" class="text-danger small"></span>
                    </div>

                    <!-- Tab Display Text -->
                    <div class="form-group mb-3">
                        <label class="font-weight-bold text-dark small text-uppercase">Tab Display Text</label>
                        <input asp-for="MENU_TXT" class="form-control" placeholder="Text to display on tab" />
                        <span asp-validation-for="MENU_TXT" class="text-danger small"></span>
                    </div>

                    <!-- Link -->
                    <div class="form-group mb-3">
                        <label class="font-weight-bold text-dark small text-uppercase">Link / Controller</label>
                        <input asp-for="MENU_LINK" class="form-control" placeholder="/Controller/Action" />
                        <span asp-validation-for="MENU_LINK" class="text-danger small"></span>
                    </div>

                </div>

                <!-- Card Footer: Action Buttons -->
                <div class="card-footer bg-white d-flex justify-content-between py-3">
                    <!-- Back Button (Left) -->
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left mr-1"></i> Kembali ke List
                    </a>

                    <!-- Save Button (Right) -->
                    <!-- Kept your original onclick logic -->
                    <button type="button" onclick="alertfirst()" class="btn btn-primary px-4 shadow-sm">
                        <i class="fas fa-save mr-1"></i> Simpan Data Baru
                    </button>
                </div>

            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- Your Original Logic Scripts -->
    <script>
        function allowOnlyNumber(evt) {
            var charCode = (evt.which) ? evt.which : event.keyCode
            if (charCode > 31 && (charCode < 48 || charCode > 57))
                return false;
            return true;
        }

        function alertfirst() {
            // Using a slightly nicer confirm text
            if (confirm("Are you sure you want to save this new data?")) {
                $('#formcreate').submit();
            } else {
                return false;
            }
        }
    </script>
}