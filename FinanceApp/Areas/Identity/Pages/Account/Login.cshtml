@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    // Using a special layout for the login page that has no navbar
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<!-- FontAwesome for Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-5">

            <!-- The Login Card -->
            <div class="card shadow-lg border-0 rounded-lg mt-5">

                <!-- Card Header with Logo -->
                <div class="card-header text-center bg-white border-bottom-0 pt-4">
                    <img src="~/images/easytaxlandscapewb.png" alt="EasyTax Logo" style="max-width: 150px;" class="mb-3" />
                    <h3 class="font-weight-bold text-primary">Log In</h3>
                    <p class="text-muted small">Silahkan login menggunakan akun yang sudah terdaftar</p>
                </div>

                <!-- Card Body with Form -->
                <div class="card-body">
                    <form id="account" method="post">

                        <!-- Validation Summary -->
                        <div asp-validation-summary="All" class="text-danger small mb-3"></div>

                        <!-- Email Input with Icon -->
                        <div class="form-group">
                            <label class="small mb-1" asp-for="Input.Email"></label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                </div>
                                <input asp-for="Input.Email" class="form-control" placeholder="name@example.com" />
                            </div>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <!-- Password Input with Icon -->
                        <div class="form-group">
                            <label class="small mb-1" asp-for="Input.Password"></label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                </div>
                                <input asp-for="Input.Password" class="form-control" placeholder="Enter password" />
                            </div>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <!-- Remember Me & Forgot Password -->
                        <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                            <div class="custom-control custom-checkbox">
                                <input class="custom-control-input" asp-for="Input.RememberMe" />
                                <label class="custom-control-label" asp-for="Input.RememberMe">
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                            <a class="small" id="forgot-password" asp-page="./ForgotPassword">Lupa Password?</a>
                        </div>

                        <!-- Login Button (Full Width) -->
                        <div class="form-group mt-4 mb-0">
                            <button type="submit" class="btn btn-primary btn-block shadow-sm">Log in</button>
                        </div>
                    </form>
                </div>

                <!-- Card Footer for Registration Link -->
                <div class="card-footer text-center bg-white border-top-0">
                    <div class="small">
                        <a asp-page="./RegisterCustomer" asp-route-returnUrl="@Model.ReturnUrl">Belum punya akun? Daftar Akun Customer</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}