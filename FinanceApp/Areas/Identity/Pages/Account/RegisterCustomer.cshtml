@page
@model BaseLineProject.Areas.Identity.RegisterCustomerModel
@{
    ViewData["Title"] = "Daftar";
    // Use the same simple layout as the login page
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">

            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header text-center bg-white border-bottom-0 pt-4">
                    <img src="~/images/easytaxlandscapewb.png" alt="EasyTax Logo" style="max-width: 150px;" class="mb-3" />
                    <h3 class="font-weight-bold text-primary">Daftar Akun Baru</h3>
                    <p class="text-muted small">Create your EasyTax customer account</p>
                </div>

                <div class="card-body">
                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">

                        <div asp-validation-summary="All" class="text-danger small mb-3"></div>

                        <!-- Wizard Headers -->
                        <ul class="nav nav-pills nav-fill mb-4" id="pills-tab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="pills-account-tab" data-toggle="pill" href="#pills-account" role="tab">1. Account Info</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="pills-company-tab" data-toggle="pill" href="#pills-company" role="tab">2. Company Info</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="pills-address-tab" data-toggle="pill" href="#pills-address" role="tab">3. Address</a>
                            </li>
                        </ul>

                        <!-- Wizard Content -->
                        <div class="tab-content" id="pills-tabContent">

                            <!-- STEP 1: Account Info -->
                            <div class="tab-pane fade show active" id="pills-account" role="tabpanel">
                                <div class="form-row">
                                    <div class="col-md-6 form-group">
                                        <label asp-for="Input.Email" class="small"></label>
                                        <input asp-for="Input.Email" class="form-control" placeholder="name@example.com" />
                                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-6 form-group">
                                        <label asp-for="Input.CUST_NAME" class="small"></label>
                                        <input asp-for="Input.CUST_NAME" class="form-control" placeholder="Enter full name" />
                                        <span asp-validation-for="Input.CUST_NAME" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col-md-6 form-group">
                                        <label asp-for="Input.Password" class="small"></label>
                                        <input asp-for="Input.Password" class="form-control" placeholder="********" />
                                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-6 form-group">
                                        <label asp-for="Input.ConfirmPassword" class="small"></label>
                                        <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm password" />
                                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="alert alert-light border small mt-2">
                                    - Password must have at least 1 unique character, 1 uppercase letter, and be at least 6 characters long.
                                </div>
                            </div>

                            <!-- STEP 2: Company Info -->
                            <div class="tab-pane fade" id="pills-company" role="tabpanel">
                                <div class="form-row">
                                    <div class="col-md-6 form-group">
                                        <label asp-for="Input.COMPANY" class="small"></label>
                                        <input asp-for="Input.COMPANY" class="form-control" placeholder="Your Company Name" />
                                        <span asp-validation-for="Input.COMPANY" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-6 form-group">
                                        <label asp-for="Input.PHONE1" class="small"></label>
                                        <input asp-for="Input.PHONE1" class="form-control" onkeypress="return allowOnlyNumber(event);" placeholder="e.g. 0812345678" />
                                        <span asp-validation-for="Input.PHONE1" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col-md-6 form-group">
                                        <label asp-for="Input.NPWP" class="small"></label>
                                        <input asp-for="Input.NPWP" class="form-control" onkeypress="return allowOnlyNumber(event);" placeholder="NPWP Number" />
                                        <span asp-validation-for="Input.NPWP" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-6 form-group">
                                        <label asp-for="Input.customertype" class="small"></label>
                                        @Html.DropDownListFor(m => m.Input.customertype, new List<SelectListItem>
                                        {
                                            new SelectListItem { Text = "CV", Value = "CV" },
                                                                                new SelectListItem { Text = "PT", Value = "PT" },
                                                                                new SelectListItem { Text = "Perorangan", Value = "Perorangan" }
                                                                                }, "Select customer type...", new { @class = "form-control" })
                                        <span asp-validation-for="Input.customertype" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col-md-6 form-group">
                                        <label asp-for="Input.SoftwarePlan" class="small"></label>
                                        @Html.DropDownListFor(m => m.Input.SoftwarePlan, new List<SelectListItem>
                                                                                {
                                            new SelectListItem { Text = "Basic", Value = "Basic" },
                                                                                new SelectListItem { Text = "UMKM", Value = "UMKM" },
                                                                                new SelectListItem { Text = "Enterprise", Value = "Enterprise" }
                                                                                }, "Select a plan...", new { @class = "form-control" })
                                        <span asp-validation-for="Input.SoftwarePlan" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="form-group mt-2">
                                    <div class="custom-control custom-switch">
                                        <input type="checkbox" class="custom-control-input" asp-for="Input.isomset">
                                        <label class="custom-control-label" asp-for="Input.isomset"></label>
                                    </div>
                                </div>
                            </div>

                            <!-- STEP 3: Address -->
                            <div class="tab-pane fade" id="pills-address" role="tabpanel">
                                <div class="form-group">
                                    <label asp-for="Input.Address" class="small"></label>
                                    <textarea asp-for="Input.Address" class="form-control" rows="3" placeholder="Street name, number, etc."></textarea>
                                    <span asp-validation-for="Input.Address" class="text-danger small"></span>
                                </div>
                                <div class="form-row">
                                    <div class="col-md-6 form-group">
                                        <label asp-for="Input.City" class="small"></label>
                                        <input asp-for="Input.City" class="form-control" placeholder="City" />
                                        <span asp-validation-for="Input.City" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-6 form-group">
                                        <label asp-for="Input.Province" class="small"></label>
                                        <input asp-for="Input.Province" class="form-control" placeholder="Province" />
                                        <span asp-validation-for="Input.Province" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.Postal" class="small"></label>
                                    <input asp-for="Input.Postal" class="form-control" onkeypress="return allowOnlyNumber(event);" placeholder="Postal Code" />
                                    <span asp-validation-for="Input.Postal" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <hr class="mt-4" />
                        <button type="submit" class="btn btn-primary btn-block btn-lg shadow-sm">Daftar</button>

                    </form>
                </div>
                <div class="card-footer text-center bg-white border-top-0">
                    <div class="small">
                        <a asp-page="./Login">Sudah punya akun? Log in</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function allowOnlyNumber(evt) {
            var charCode = (evt.which) ? evt.which : event.keyCode
            if (charCode > 31 && (charCode < 48 || charCode > 57))
                return false;
            return true;
        }
    </script>
}